{
  "compilerOptions": {
    "target": "ES2023",      
    "module": "ESNext",        
    "outDir": "./src/js",     
    "rootDir": "./ts",        
    "strict": true,             
    "esModuleInterop": true,   
    "skipLibCheck": true,      
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "./ts/**/*"                
  ],
  "exclude": [
    "node_modules"            
  ]
}
